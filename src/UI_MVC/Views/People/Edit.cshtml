@model UI_MVC.Models.Entities.Person

<form class="row g-3"
      asp-controller="People"
      asp-action="Edit"
      method="post">
    <div class="col-md-6">
        @* <input type="hidden" asp-for="Id"/> *@
        <label asp-for="FirstName" class="form-label">نام</label>
        <input asp-for="FirstName" type="text" class="form-control">
    </div>
    <div class="col-md-6">
        <label asp-for="LastName" class="form-label">نام خانوادگی</label>
        <input asp-for="LastName" type="text" class="form-control">
    </div>
    <div class="col-md-6">
        <label asp-for="PhoneNumber" class="form-label">موبایل</label>
        <input asp-for="PhoneNumber" type="text" class="form-control" placeholder="1234 Main St">
    </div>
    <div class="col-md-6">
        <label asp-for="CityName" class="form-label">شهر</label>
        <input asp-for="CityName" type="text" class="form-control">
    </div>
    <div class="col-12">
        <button type="submit" class="btn btn-success">ذخیره</button>
    </div>
</form>